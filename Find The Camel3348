import java.lang.*;
import java.io.*;
class GFG
 {
	public static void main (String[] args)
	 {
	 Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		while (t>0)
		{
		String s1= sc.next();
		int l = s1.length();
		int flag = 0;
		{
			for (int i=0;i<l;i++)
			{
				int n = s1.charAt(i);
				
					if (n >64 && n<91)
					{
						flag++;
					}
					else
						continue;
			}
			
		}
		System.out.println(flag);
		
	    	t--;
		}
	 }
}
